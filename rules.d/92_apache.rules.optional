### APACHE 
# whitelist
-a exit,never -F dir=/var/www/ -F euid=apache -k apache_webignor
-a exit,never -F dir=/var/log/httpd/ -F euid=apache -k apache_webignor
-a exit,never -F dir=/etc/httpd/ -F euid=apache -F perm=wxa -k apache_webignor
-a exit,never -F path=/usr/share/zoneinfo/UTC -F euid=apache -F perm=wxa -k apache_webignor
# blacklist
-a exit,always -F dir=/ -F euid=apache -F perm=rwxa -k apache_suspicious

